// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.1.0",
	"configurations": [
		{
			"name": "Attach to lspserver",
			"type": "node",
			"request": "attach",
			"port": 6011
		},
		{
			"name": "debugger Server",
			"type": "node",
			"request": "launch",
			"cwd": "${workspaceFolder}",
			"program": "${workspaceFolder}/lib/erlangDebug.ts",
			"args": [
				"--server=4711"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			]
		},
		{
			"name": "Launch Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}" ],
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/out"],
		},
		{
			"name": "Launch Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"${workspaceFolder}/test-temp/",
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceRoot}/out/test/test-suite" 
			],
			"sourceMaps": true,
			"outFiles": ["${workspaceFolder}/out/**/*.js"],
			// "preLaunchTask": "prepareTest",
			// "postDebugTask": "cleanTestFolder"
		}
	]
}
